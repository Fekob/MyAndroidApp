<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="800.0" style="-fx-background-color: #102E50;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ResultPage">
    <children>

        <Label fx:id="bmiValueLabel" layoutX="329.0" layoutY="263.0" style="-fx-font-size: 24px;" text="Your BMI: 0.0" textFill="white">
            <font>
                <Font name="System Bold" size="54.0" />
            </font>
        </Label>

        <Label fx:id="bmiStatusLabel" layoutX="294.0" layoutY="305.0" style="-fx-font-size: 20px;" text="Health Status: Unknown" textFill="white">
            <font>
                <Font name="System Bold Italic" size="20.0" />
            </font>
        </Label>

        <ProgressBar fx:id="bmiProgressBar" layoutX="150.0" layoutY="362.0" prefWidth="500.0" progress="0.0" style="-fx-accent: #00FF99;" />

        <Button fx:id="saveButton" layoutX="97.0" layoutY="397.0" prefHeight="71.0" prefWidth="273.0" style="-fx-background-color: #E0FE10; font-weight: bold;" text="Save BMI Data">
         <font>
            <Font name="System Bold Italic" size="26.0" />
         </font></Button>
        <Button fx:id="backButton" style="-fx-background-color: transparent; -fx-text-fill: white;" text="Back" textFill="#e0fe10">
         <font>
            <Font name="System Bold Italic" size="25.0" />
         </font></Button>
      <ImageView fitHeight="243.0" fitWidth="370.0" layoutX="203.0" layoutY="8.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../resources/bnf.jpg" />
         </image>
      </ImageView>
        <Button fx:id="showDataButton" layoutX="400.0" layoutY="397.0" prefHeight="71.0" prefWidth="273.0" style="-fx-background-color: #E0FE10; font-weight: bold;" text="Show Stored Data">
         <font>
            <Font name="System Bold Italic" size="24.0" />
         </font></Button>
    </children>
</AnchorPane>
